<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/pop_up_color"
        app:cardCornerRadius="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginRight="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/diamond"
                    android:id="@+id/reklam"
                    android:layout_marginTop="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </Button>
                <TextView
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-black"
                    android:textSize="16sp"
                    android:text="+"
                    />
            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">
                <RelativeLayout
                    android:id="@+id/top_content"
                    android:background="@drawable/circle_deneme"
                    android:layout_centerHorizontal="true"
                    android:layout_width="120dp"
                    android:layout_height="120dp">
                    <ImageView
                        android:id="@+id/warning_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/left_congratulation"
                    android:background="@drawable/c_stars"
                    android:visibility="invisible"
                    android:layout_toLeftOf="@+id/top_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="7dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:rotation="45"/>
                <ImageView
                    android:id="@+id/right_congratulation"
                    android:layout_toRightOf="@+id/top_content"
                    android:layout_width="50dp"
                    android:visibility="invisible"
                    android:layout_marginLeft="7dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/c_stars"
                    android:rotation="45" />
                <TextView
                    android:id="@+id/warning_titles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/message_textxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/warning_titles"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_below="@+id/message_textxt"
                    android:id="@+id/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/belirtec"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_home"
                        android:layout_toLeftOf="@+id/belirtec"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="40dp"
                        android:fontFamily="serif"
                        android:textSize="13sp"
                        android:textAllCaps="false"/>
                    <Button
                        android:id="@+id/button_tmm"
                        android:layout_toRightOf="@+id/belirtec"
                        android:layout_marginLeft="40dp"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:fontFamily="serif"
                        android:textSize="13sp"
                        android:textAllCaps="false"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>